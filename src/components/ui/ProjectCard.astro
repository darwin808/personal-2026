---
interface Props {
  title: string;
  description: string;
  image: string;
  technologies: string[];
  githubUrl?: string;
  liveUrl?: string;
  featured?: boolean;
  reverse?: boolean;
}

const { title, description, image, technologies, githubUrl, liveUrl, featured = false, reverse = false } = Astro.props;
---

<div class={`group mb-20 grid grid-cols-1 md:grid-cols-12 gap-4 items-center ${reverse ? 'md:text-right' : ''}`}>
  <div class={`md:col-span-7 ${reverse ? 'md:col-start-6' : ''} relative`}>
    <div class="relative overflow-hidden rounded-lg border-2 border-gruvbox-bg2 group-hover:border-gruvbox-aqua transition-all duration-300">
      <div class="aspect-video bg-gruvbox-bg1 flex items-center justify-center">
        <span class="text-gruvbox-gray">Project Image</span>
      </div>
    </div>
  </div>

  <div class={`md:col-span-5 ${reverse ? 'md:col-start-1 md:row-start-1' : ''} z-10`}>
    {featured && (
      <p class="text-gruvbox-aqua font-mono text-sm mb-2">Featured Project</p>
    )}
    <h3 class="text-gruvbox-fg0 text-2xl font-bold mb-4">{title}</h3>

    <div class={`bg-gruvbox-bg1 p-6 rounded-lg mb-4 ${reverse ? 'md:text-right' : ''}`}>
      <p class="text-gruvbox-fg2">{description}</p>
    </div>

    <div class={`flex flex-wrap gap-2 mb-4 ${reverse ? 'md:justify-end' : ''}`}>
      {
        technologies.map((tech) => (
          <span class="text-gruvbox-fg3 font-mono text-xs">{tech}</span>
        ))
      }
    </div>

    <div class={`flex gap-4 ${reverse ? 'md:justify-end' : ''}`}>
      {githubUrl && (
        <a
          href={githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gruvbox-fg2 hover:text-gruvbox-yellow transition-colors"
          aria-label="GitHub Repository"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
          </svg>
        </a>
      )}
      {liveUrl && (
        <a
          href={liveUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gruvbox-fg2 hover:text-gruvbox-yellow transition-colors"
          aria-label="Live Project"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
            <polyline points="15 3 21 3 21 9"></polyline>
            <line x1="10" y1="14" x2="21" y2="3"></line>
          </svg>
        </a>
      )}
    </div>
  </div>
</div>
