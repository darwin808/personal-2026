---
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const featuredProjects = projects
  .sort((a, b) => a.data.order - b.data.order);
const project_links = "https://github.com/darwin808"
---

<section id="projects" class="mb-16 scroll-mt-16 lg:mb-24 lg:scroll-mt-24" aria-label="Selected projects">
  <div class="sticky top-0 z-20 -mx-6 mb-4 w-screen bg-gruvbox-bg/75 px-6 py-5 backdrop-blur lg:sr-only lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0 lg:py-0 lg:opacity-0">
    <h2 class="text-sm font-bold uppercase tracking-widest text-gruvbox-fg lg:sr-only">
      Projects
    </h2>
  </div>

  <div>
    <ul class="group/list">
      {featuredProjects.map((project) => (
        <li class="mb-12">
          <div class="group relative pb-1 transition-all lg:hover:!opacity-100 lg:group-hover/list:opacity-80">
            <div class="absolute -inset-x-4 -inset-y-4 z-0 hidden rounded-md transition-all duration-300 motion-reduce:transition-none lg:-inset-x-6 lg:block lg:group-hover:bg-[var(--color-card-bg)] lg:group-hover:shadow-[inset_0_1px_0_0_var(--color-card-border)] lg:group-hover:drop-shadow-lg lg:group-hover:scale-[1.02]"></div>

            <div class="z-10 relative">
              <h3>
                <a
                  class="inline-flex items-baseline font-medium leading-tight text-gruvbox-fg0 hover:text-gruvbox-orange focus-visible:text-gruvbox-orange group/link text-base"
                  href={project.data.liveUrl || project.data.githubUrl}
                  target="_blank"
                  rel="noreferrer noopener"
                  aria-label={project.data.title}
                >
                  <span class="absolute -inset-x-4 -inset-y-2.5 hidden rounded md:-inset-x-6 md:-inset-y-4 lg:block"></span>
                  <span>
                    {project.data.title}
                    <svg class="inline-block h-4 w-4 shrink-0 transition-transform group-hover/link:-translate-y-1 group-hover/link:translate-x-1 group-focus-visible/link:-translate-y-1 group-focus-visible/link:translate-x-1 motion-reduce:transition-none ml-1 translate-y-px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z" clip-rule="evenodd"></path>
                    </svg>
                  </span>
                </a>
              </h3>

              <p class="mt-2 text-sm leading-normal text-gruvbox-fg2">
                {project.data.description}
              </p>

              <ul class="mt-2 flex flex-wrap" aria-label="Technologies used">
                {project.data.technologies.map((tech) => (
                  <li class="mr-1.5 mt-2">
                    <div class="flex items-center rounded-full bg-gruvbox-aqua/[0.15] px-3 py-1 text-xs font-medium leading-5 text-gruvbox-aqua transition-all duration-200 hover:bg-gruvbox-aqua/[0.25] hover:scale-105 hover:-translate-y-0.5 cursor-default ring-1 ring-gruvbox-aqua/30">
                      {tech}
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </li>
      ))}
    </ul>

    <div class="mt-12">
      <a
          href={project_links}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center font-medium leading-tight text-gruvbox-fg group hover:text-gruvbox-yellow focus-visible:text-gruvbox-yellow transition-all duration-200"
      >
        <span class="border-b-2 border-transparent pb-px transition-all duration-200 group-hover:border-gruvbox-yellow group-hover:pb-1 motion-reduce:transition-none">
          View Full Project Archive
        </span>
        <svg class="ml-1 inline-block h-4 w-4 shrink-0 -translate-y-px transition-all duration-200 group-hover:translate-x-2 group-hover:scale-110 group-focus-visible:translate-x-2 motion-reduce:transition-none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
